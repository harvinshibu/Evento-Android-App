<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".CmpFragment.AccountCmpFragment">

    <RelativeLayout
        android:id="@+id/rProgLayout"
        android:orientation="vertical"
        android:layout_width="50dp"
        android:visibility="gone"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/white_circle"
        android:elevation="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/custom_progress_load" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="209dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/usr_nameAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="left"
                    android:text="----"
                    android:textColor="#232f34"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/usr_PhoneAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left"
                    android:text="----"
                    android:textColor="#232f34"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="179dp"
                    android:layout_height="153dp"
                    android:src="@drawable/building_pic" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey" />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:text="Account"
                android:textColor="#232f34"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/viewUsrProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_account"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_light"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="My Profile \nEdit Profile details of your account."
                android:textColor="#232f34"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/changeAccPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_light"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Change Password \nReset the account password."
                android:textColor="#232f34"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/logoutUsr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_arrow"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto_light"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="Logout\nLogout from this device."
                android:textColor="#232f34"
                android:textSize="18sp"
                android:textStyle="bold" />



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/ic_information_button"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto_light"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:text="About us.\nAbout this app."
                android:textColor="#232f34"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>